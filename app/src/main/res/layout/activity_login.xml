<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.LoginActivity"
     >
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:animateLayoutChanges="true"

       >
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imgview_icon"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:src="@drawable/heart"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/relativeLayout_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgview_icon"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/linear_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:layout_marginLeft="@dimen/size_edtuser_margin"
                    android:layout_marginRight="@dimen/size_edtuser_margin"
                    android:id="@+id/edt_Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="@string/login_username"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/linear_Username"
                android:id="@+id/linear_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">


                <EditText

                    android:layout_marginLeft="@dimen/size_edtuser_margin"
                    android:layout_marginRight="@dimen/size_edtuser_margin"
                    android:id="@+id/edt_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:password="true"
                    android:hint="@string/login_password"/>
            </LinearLayout>
                <Button

                    android:layout_below="@id/linear_Password"
                    android:id="@+id/btn_Login"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:background="@drawable/shape"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_login"/>
               <Button
                   android:layout_below="@id/btn_Login"
                   android:id="@+id/btn_Register"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="10dp"
                   android:text="Register new account"
                   android:textAllCaps="false"
                   android:background="@android:color/transparent"
                   android:textColor="@android:color/holo_blue_light"
                   android:textSize="@dimen/size_login" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>